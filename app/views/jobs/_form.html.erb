<%= form_for @job do |f| %>
<% if @job.errors.any? %>
<ul>
  <% @job.errors.full_message.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
标题
<%= f.text_field :title %>
<br>
描述
<br>
<%= f.text_area :description %>
<br>

<%= f.submit "Submit", :disable_with => "Submiting..." %>
<% end %>
